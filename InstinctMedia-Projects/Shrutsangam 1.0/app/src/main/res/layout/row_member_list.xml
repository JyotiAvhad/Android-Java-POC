<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_book_issue_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_member_code"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="3dp"
                android:text="Member Name: પરાગભાઈ શાહ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />


            <TextView
                android:id="@+id/txt_member_code"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="code: surat"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_member_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_member_name"
                android:padding="3dp"
                android:text="City: surat"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_member_category"
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_member_name"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="Category: Regular"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_mobile_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_member_category"
                android:padding="3dp"
                android:text="Mobile No : C0032"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_member_join_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_mobile_no"
                android:padding="3dp"
                android:text="Join Date: C0032"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_member_end_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_mobile_no"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:padding="3dp"
                android:text="Issue No: C0032"
                android:textColor="@android:color/black"
                android:textSize="11dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
