<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_book_issue_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_member_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/txt_member_code"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Member Name: પરાગભાઈ શાહ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_member_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Member Code: 0001"
                android:textColor="@android:color/black"
                android:textSize="11dp" />


            <TextView
                android:id="@+id/txt_member_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_member_name"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="number: પચાસ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_member_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_member_number"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="email: પચાસ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />


            <TextView
                android:id="@+id/txt_issue_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_member_email"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Issuebooks: C0032"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_receive_book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_member_email"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:text="Receivebooks: C0032"
                android:textColor="@android:color/black"
                android:textSize="11dp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
