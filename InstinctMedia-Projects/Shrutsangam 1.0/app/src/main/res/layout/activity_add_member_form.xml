<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_login"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="-20dp"
            android:background="@color/colorWhite"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/img_back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="3dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Add Member"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_20dp"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member Code"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/edt_member_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="text"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member Name"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/edt_member_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="textPersonName"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:singleLine="true"
                            android:paddingBottom="7dp"
                            android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member Address"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/edt_member_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:singleLine="true"
                            android:paddingBottom="7dp"
                            android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member City"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/edt_member_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:singleLine="true"
                            android:paddingBottom="7dp"
                            android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member State"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/edt_member_state"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:singleLine="true"
                            android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member Pincode"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/edt_member_pincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:singleLine="true"
                            android:paddingBottom="7dp"
                            android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member PhoneNo"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/edt_member_phone_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:inputType="number"
                            android:singleLine="true"
                            android:paddingBottom="7dp"
                            android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member Mobile No"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/edt_member_monbileNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="number"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:singleLine="true"
                            android:paddingBottom="7dp"
                            android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member Email"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/edt_member_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:singleLine="true"
                            android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member BirthDate"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="3dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <TextView
                            android:id="@+id/txtbirthdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp" />
                    </androidx.cardview.widget.CardView>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Referance"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                            <EditText
                                android:id="@+id/edt_refrence"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@null"
                                android:inputType="text"
                                android:singleLine="true"
                                android:paddingLeft="@dimen/dimen_20dp"
                                android:paddingTop="7dp"
                                android:paddingBottom="7dp"
                                android:textSize="16dp" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Category"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <Spinner
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="@dimen/dimen_10dp"
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <!--<EditText-->
                            <!--android:id="@+id/edt_category"-->
                            <!--android:layout_width="match_parent"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_centerVertical="true"-->
                            <!--android:background="@null"-->
                            <!--android:inputType="text"-->
                            <!--android:paddingLeft="@dimen/dimen_20dp"-->
                            <!--android:paddingTop="7dp"-->
                            <!--android:singleLine="true"-->
                            <!--android:paddingBottom="7dp"-->
                            <!--android:textSize="16dp" />-->
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:text="Join Date"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_join_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="3dp"
                                app:cardBackgroundColor="@color/colorPlaceHolder"
                                app:cardCornerRadius="@dimen/dimen_20dp"
                                app:cardElevation="1dp">

                                <TextView
                                    android:id="@+id/txt_join_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/dimen_20dp"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="7dp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:text="End Date"
                                android:textColor="@android:color/black"
                                android:textStyle="bold" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/card_end_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="3dp"
                                app:cardBackgroundColor="@color/colorPlaceHolder"
                                app:cardCornerRadius="@dimen/dimen_20dp"
                                app:cardElevation="1dp">

                                <TextView
                                    android:id="@+id/txt_end_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/dimen_20dp"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="7dp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:text="Member Status"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_member_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardBackgroundColor="@color/colorPlaceHolder"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="1dp">

                        <EditText
                            android:id="@+id/et_member_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:background="@null"
                            android:paddingLeft="@dimen/dimen_20dp"
                            android:singleLine="true"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:textSize="16dp" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_add_member"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@android:color/black"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Add Member"
                            android:textColor="@color/colorWhite" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_cancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        app:cardBackgroundColor="@color/colorAccent"
                        app:cardCornerRadius="@dimen/dimen_20dp"
                        app:cardElevation="2dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Cancel"
                            android:textColor="@color/colorWhite" />
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_form_submit"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>