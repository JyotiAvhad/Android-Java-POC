<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_book_issue_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:padding="3dp"
                android:id="@+id/txt_member_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Member Code: પરાગભાઈ શાહ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/txt_member_name"
                android:layout_width="match_parent"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Member Name: પરાગભાઈ શાહ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            </LinearLayout>
            <TextView
                android:id="@+id/txt_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:visibility="gone"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Member Name: પરાગભાઈ શાહ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_book_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:padding="3dp"
                android:maxLines="2"
                android:text="Member Name: પરાગભાઈ શાહ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="2"
                android:text="Member Name: પરાગભાઈ શાહ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_member_name"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="name: પચાસ"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <RelativeLayout
                android:layout_below="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_over_dueday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="OverDueDay: C0032"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:id="@+id/txt_issue_date"
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:text="book_no: C0032"
                android:textColor="@android:color/black"
                android:textSize="11dp" />
            </RelativeLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
