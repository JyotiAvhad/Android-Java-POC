<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_book_issue_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:padding="3dp"
                android:id="@+id/txt_book_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Book Name: Mrug jal ni maya"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <LinearLayout
                android:layout_below="@+id/txt_book_no"
                android:id="@+id/layoutData"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:padding="3dp"
                android:id="@+id/txt_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/txt_date"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="Book Name: Mrug jal ni maya"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            <TextView
                android:layout_weight="1"
               android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_gravity="end"
                android:gravity="end"
                android:text="Issue date: 17-09-2019"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/layoutabc"
                android:layout_below="@+id/layoutData"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_member_code"
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:text="Name: Dev surat"
                android:textColor="@android:color/black"
                android:textSize="11dp" />


            <TextView
                android:layout_weight="1"
                android:id="@+id/txt_member_name"
                android:layout_width="wrap_content"
                android:padding="3dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:text="Name: Dev surat"
                android:textColor="@android:color/black"
                android:textSize="11dp" />

            </LinearLayout>

            <!--<TextView-->
                <!--android:id="@+id/txt_book_no"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_marginTop="@dimen/dimen_20dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/txt_member_name"-->
                <!--android:padding="3dp"-->
                <!--android:text="Book No: C0032"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:textSize="11dp" />-->

            <LinearLayout
                android:layout_below="@+id/layoutabc"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                android:layout_weight="0.9"
                android:id="@+id/txt_issue_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutabc"
                android:padding="3dp"
                android:text="Issue No: C0032"
                android:textColor="@android:color/black"
                android:textSize="11dp" />


                <androidx.cardview.widget.CardView
                    android:layout_weight="1.12"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/card_receive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:cardBackgroundColor="@color/colorGreen"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/txt_receive"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:paddingLeft="8dp"
                        android:paddingTop="4dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="4dp"
                        android:text="Receive"
                        android:textColor="@color/colorWhite"
                        android:textSize="12dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

            <TextView
                android:layout_weight="0.9"
                android:id="@+id/txt_overdue_days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="3dp"
                android:textColor="@android:color/black"
                android:textSize="11dp" />
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
